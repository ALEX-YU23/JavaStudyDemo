package org.jgs.day02;
/**
 * 位运算符
 * &
 * |
 * ~
 * ^
 * @author mosin
 * @DATE 2021年3月29日
 */
public class Operator03 {

	public static void main(String[] args) {
		/*
		 * java中如何表示进制 
		 *  0b开头表示二进制  
		 *  0 表示八进制  
		 *  0x开头 代表十六进制
		 *  什么都不写 代表的十进制
		 * 
		 * */
		
		int a = 5;  //十进制
		a = 0b0101;  //二进制
		System.out.println(a);
		int b = 0101;
		System.out.println(b);
		
		b = 0x14;
		System.out.println(b);
		
		
		int num1 = 3;
		int num2 = 5;
		
		//&
		System.out.println(num1&num2);
		System.out.println(num1|num2);
		System.out.println(~num1);
		System.out.println(num1^num2);
		System.out.println(num1<<1);
		System.out.println(num1>>1);
		
		
		
		

	}

}
